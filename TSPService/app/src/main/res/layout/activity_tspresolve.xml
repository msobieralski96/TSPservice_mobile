<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".TSPResolveActivity">

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dimBackgroundColor"
        android:elevation="2dp"
        android:visibility="gone"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:elevation="10dp"
            android:indeterminate="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_table"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical"
            android:layout_weight="1">
            <HorizontalScrollView
                android:id="@+id/scroll_table_h"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="900dp"
                    android:layout_height="wrap_content">
                    <TableLayout
                        android:id="@+id/table_parcels"
                        android:layout_width="900dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TableRow
                            android:id="@+id/table_parcels_header">
                            <Button
                                android:id="@+id/button_order"
                                android:text="#"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".06"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="#ffffff"
                                android:clickable="false"/>
                            <Button
                                android:id="@+id/button_id"
                                android:text="SSCC"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".18"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="#ffffff"
                                android:clickable="false"/>
                            <Button
                                android:id="@+id/button_address_type"
                                android:text="Typ adresu"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".12"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="#ffffff"
                                android:clickable="false"/>
                            <Button
                                android:id="@+id/button_address"
                                android:text="Adres"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="#ffffff"
                                android:clickable="false"/>
                            <Button
                                android:id="@+id/button_date"
                                android:text="Data"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".12"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="#ffffff"
                                android:clickable="false"/>
                            <Button
                                android:id="@+id/button_state"
                                android:text="Status"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".12"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="#ffffff"
                                android:clickable="false"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layout_credits"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_credits"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimaryDark"
                android:text="Powered by: Service © openrouteservice.org | Map data © OpenStreetMap contributors"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>